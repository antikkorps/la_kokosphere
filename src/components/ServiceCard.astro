---
export interface Props {
  title: string;
  description: string;
  image?: string;
  price?: string;
  duration?: string;
  body?: string;
}
const { title, description, image, price, duration, body } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg border-2 border-gray-100 hover:border-primary-200 transition-colors duration-200 flex flex-col h-full">
  {image && (
    <div class="mb-6">
      <img src={image} alt={title} class="w-full h-48 object-cover rounded-t-xl" loading="lazy" />
    </div>
  )}
  <div class="flex-1 flex flex-col px-6 pb-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    {price && (
      <div class="text-2xl font-bold text-primary-600 mb-2">{price}</div>
    )}
    {duration && (
      <p class="text-gray-500 text-sm mb-4">{duration}</p>
    )}
    {body && (
      <div class="prose prose-sm text-gray-600 mb-6 space-y-4">
        <div class="[&>h3]:text-lg [&>h3]:font-semibold [&>h3]:text-gray-900 [&>h3]:mb-3 [&>h3]:mt-6 [&>h3]:first:mt-0 
                    [&>h4]:text-base [&>h4]:font-medium [&>h4]:text-gray-800 [&>h4]:mb-2 [&>h4]:mt-4
                    [&>p]:mb-4 [&>p]:leading-relaxed [&>p]:text-gray-600 [&>p]:last:mb-0
                    [&>ul]:list-disc [&>ul]:list-outside [&>ul]:pl-6 [&>ul]:space-y-1 [&>ul]:mb-4
                    [&>ol]:list-decimal [&>ol]:list-outside [&>ol]:pl-6 [&>ol]:space-y-1 [&>ol]:mb-4
                    [&>li]:leading-relaxed [&>li]:text-gray-600
                    [&>strong]:font-semibold [&>strong]:text-gray-900
                    [&>em]:italic
                    [&>blockquote]:border-l-2 [&>blockquote]:border-primary-300 [&>blockquote]:pl-4 [&>blockquote]:italic [&>blockquote]:text-gray-600 [&>blockquote]:my-4"
             set:html={body} />
      </div>
    )}
    <div class="mt-auto">
      <a href="/contact" class="w-full btn-primary text-center block">En savoir plus</a>
    </div>
  </div>
</div> 