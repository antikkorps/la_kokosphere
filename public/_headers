# Headers pour Netlify - Optimisation SEO et Performance

/*
  # Cache des ressources statiques
  Cache-Control: public, max-age=31536000, immutable
  
  # Sécurité
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy basique
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://identity.netlify.com https://calendly.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://cdn.sanity.io https://images.unsplash.com; connect-src 'self' https://api.netlify.com https://j41wv78y.api.sanity.io; frame-src https://calendly.com;

/*.html
  # Cache plus court pour les pages HTML
  Cache-Control: public, max-age=3600
  
/sitemap.xml
  # Cache du sitemap
  Cache-Control: public, max-age=86400
  
/robots.txt
  # Cache du robots.txt
  Cache-Control: public, max-age=86400

# Fonts
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  
# Images
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
# CSS et JS
/_astro/*
  Cache-Control: public, max-age=31536000, immutable