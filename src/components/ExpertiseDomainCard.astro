---
import type { CollectionEntry } from 'astro:content';
import AnimatedSection from './AnimatedSection.astro';

interface Props {
	domain: CollectionEntry<'expertiseDomains'>;
	delay?: number;
}

const { domain, delay = 0 } = Astro.props;

// Mapping des icônes
const iconMap = {
	heart: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />`,
	warning: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />`,
	lightning: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
	'check-circle': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />`,
	moon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />`,
	star: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />`,
	shield: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
	brain: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
};

const iconPath = iconMap[domain.data.icon];
const colorClass = domain.data.color === 'primary' ? 'primary' : 'secondary';
---

<AnimatedSection trigger="scroll" delay={delay} class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow">
	<div class={`w-16 h-16 bg-${colorClass}-100 rounded-lg flex items-center justify-center mb-6`}>
		<svg class={`w-8 h-8 text-${colorClass}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={iconPath} />
	</div>
	<h3 class="text-xl font-semibold text-gray-900 mb-4">{domain.data.title}</h3>
	<p class="text-gray-600 mb-4">
		{domain.data.description}
	</p>
	<a href={`/services#${domain.data.anchor}`} class="text-primary-600 hover:text-primary-700 font-medium">
		En savoir plus →
	</a>
</AnimatedSection> 