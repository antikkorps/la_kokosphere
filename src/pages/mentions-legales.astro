---
import { getCollection, render } from 'astro:content';
import { SITE_TITLE } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupérer le contenu de la page
const pages = await getCollection('pages');
const mentionsLegales = pages.find(page => page.id === 'mentions-legales');

// Rendre le contenu Markdown
let Content = null;
if (mentionsLegales) {
  const { Content: RenderedContent } = await render(mentionsLegales);
  Content = RenderedContent;
}
---

<BaseLayout title={`Mentions légales - ${SITE_TITLE}`} description="Informations légales et mentions obligatoires du site.">
	<section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
		<div class="container-max">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Mentions légales
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Informations légales et mentions obligatoires du site.
				</p>
			</div>
		</div>
	</section>

	<section class="section-padding bg-white">
		<div class="container-max">
			<div class="prose prose-lg max-w-4xl mx-auto">
				{Content && <Content />}
			</div>
		</div>
	</section>
</BaseLayout> 