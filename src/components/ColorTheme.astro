---
// Ce composant définit les variables CSS pour les couleurs centralisées
// Il peut être importé dans le layout principal pour appliquer les couleurs
---

<style is:global>
  :root {
    /* Variables CSS pour les couleurs primaires */
    --color-primary-50: #eff6ff;
    --color-primary-100: #dbeafe;
    --color-primary-200: #bfdbfe;
    --color-primary-300: #93c5fd;
    --color-primary-400: #60a5fa;
    --color-primary-500: #3b82f6;
    --color-primary-600: #2563eb;
    --color-primary-700: #1d4ed8;
    --color-primary-800: #1e40af;
    --color-primary-900: #1e3a8a;

    /* Variables CSS pour les couleurs secondaires */
    --color-secondary-50: #faf5ff;
    --color-secondary-100: #f3e8ff;
    --color-secondary-200: #e9d5ff;
    --color-secondary-300: #d8b4fe;
    --color-secondary-400: #c084fc;
    --color-secondary-500: #a855f7;
    --color-secondary-600: #9333ea;
    --color-secondary-700: #7c3aed;
    --color-secondary-800: #6b21a8;
    --color-secondary-900: #581c87;

    /* Variables CSS pour les couleurs d'accent */
    --color-accent-success: #10b981;
    --color-accent-warning: #f59e0b;
    --color-accent-error: #ef4444;
    --color-accent-info: #06b6d4;

    /* Variables CSS pour les couleurs neutres */
    --color-neutral-50: #f8fafc;
    --color-neutral-100: #f1f5f9;
    --color-neutral-200: #e2e8f0;
    --color-neutral-300: #cbd5e1;
    --color-neutral-400: #94a3b8;
    --color-neutral-500: #64748b;
    --color-neutral-600: #475569;
    --color-neutral-700: #334155;
    --color-neutral-800: #1e293b;
    --color-neutral-900: #0f172a;

    /* Variables CSS pour les couleurs de fond */
    --color-background-light: #ffffff;
    --color-background-dark: #0f172a;
    --color-background-primary: #eff6ff;
    --color-background-secondary: #faf5ff;

    /* Variables CSS pour les couleurs de texte */
    --color-text-primary: #1e293b;
    --color-text-secondary: #64748b;
    --color-text-light: #f8fafc;
    --color-text-muted: #94a3b8;

    /* Gradients prédéfinis */
    --gradient-primary: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-secondary-600) 100%);
    --gradient-hero: linear-gradient(135deg, var(--color-primary-600) 0%, var(--color-secondary-600) 100%);
    --gradient-card: linear-gradient(135deg, var(--color-background-light) 0%, var(--color-neutral-50) 100%);
    --gradient-overlay: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(147, 51, 234, 0.1) 100%);
  }

  /* Classes utilitaires pour les couleurs */
  .bg-gradient-primary {
    background: var(--gradient-primary);
  }

  .bg-gradient-hero {
    background: var(--gradient-hero);
  }

  .bg-gradient-card {
    background: var(--gradient-card);
  }

  .bg-gradient-overlay {
    background: var(--gradient-overlay);
  }

  /* Classes pour les couleurs d'accent */
  .text-accent-success {
    color: var(--color-accent-success);
  }

  .text-accent-warning {
    color: var(--color-accent-warning);
  }

  .text-accent-error {
    color: var(--color-accent-error);
  }

  .text-accent-info {
    color: var(--color-accent-info);
  }

  .bg-accent-success {
    background-color: var(--color-accent-success);
  }

  .bg-accent-warning {
    background-color: var(--color-accent-warning);
  }

  .bg-accent-error {
    background-color: var(--color-accent-error);
  }

  .bg-accent-info {
    background-color: var(--color-accent-info);
  }

  /* Classes pour les couleurs de texte */
  .text-primary {
    color: var(--color-text-primary);
  }

  .text-secondary {
    color: var(--color-text-secondary);
  }

  .text-light {
    color: var(--color-text-light);
  }

  .text-muted {
    color: var(--color-text-muted);
  }

  /* Classes pour les couleurs de fond */
  .bg-light {
    background-color: var(--color-background-light);
  }

  .bg-dark {
    background-color: var(--color-background-dark);
  }

  .bg-primary-light {
    background-color: var(--color-background-primary);
  }

  .bg-secondary-light {
    background-color: var(--color-background-secondary);
  }
</style> 