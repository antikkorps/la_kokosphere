---
export interface Props {
  title: string;
  description: string;
  image?: string;
  price?: string;
  duration?: string;
  body?: string;
}
const { title, description, image, price, duration, body } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg border-2 border-gray-100 hover:border-primary-200 transition-colors duration-200 flex flex-col h-full">
  {image && (
    <div class="mb-6">
      <img src={image} alt={title} class="w-full h-48 object-cover rounded-t-xl" loading="lazy" />
    </div>
  )}
  <div class="flex-1 flex flex-col px-6 pb-6">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    {price && (
      <div class="text-2xl font-bold text-primary-600 mb-2">{price}</div>
    )}
    {duration && (
      <p class="text-gray-500 text-sm mb-4">{duration}</p>
    )}
    {body && (
      <div class="prose prose-sm text-gray-600 mb-6" set:html={body} />
    )}
    <div class="mt-auto">
      <a href="/contact" class="w-full btn-primary text-center block">En savoir plus</a>
    </div>
  </div>
</div> 