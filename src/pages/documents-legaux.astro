---
import { SITE_TITLE } from "../consts"
import BaseLayout from "../layouts/BaseLayout.astro"
import { getLegalDocuments } from "../lib/sanity"

// Récupérer les documents légaux depuis Sanity
const legalDocuments = await getLegalDocuments()

// Grouper les documents par type
const documentsByType = legalDocuments.reduce(
  (acc, doc) => {
    if (!acc[doc.type]) {
      acc[doc.type] = []
    }
    acc[doc.type].push(doc)
    return acc
  },
  {} as Record<string, typeof legalDocuments>
)

// Labels pour les types de documents
const typeLabels = {
  insurance: "Attestations d'assurance",
  diploma: "Diplômes",
  certification: "Certifications",
  other: "Autres documents",
}

// Icônes pour les types de documents
const typeIcons = {
  insurance: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`,
  diploma: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />`,
  certification: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />`,
  other: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />`,
}

// Fonction pour formater la date
function formatDate(dateString: string): string {
  return new Date(dateString).toLocaleDateString("fr-FR", {
    year: "numeric",
    month: "long",
    day: "numeric",
  })
}

// Fonction pour vérifier si un document est expiré
function isExpired(validUntil?: string): boolean {
  if (!validUntil) return false
  return new Date(validUntil) < new Date()
}
---

<BaseLayout
  title={`Documents légaux - ${SITE_TITLE}`}
  description="Consultez mes attestations d'assurance, diplômes et certifications. Transparence et professionnalisme dans l'exercice de l'hypnothérapie."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
    <div class="container-max">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Documents légaux
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Transparence et professionnalisme : consultez mes attestations d'assurance,
          diplômes et certifications.
        </p>
      </div>
    </div>
  </section>

  <!-- Documents Section -->
  <section class="section-padding bg-white">
    <div class="container-max">
      {
        legalDocuments.length > 0 ? (
          <div class="space-y-12">
            {Object.entries(documentsByType).map(([type, documents]) => (
              <div key={type}>
                <div class="flex items-center mb-8">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
                    <svg
                      class="w-6 h-6 text-primary-600"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                      set:html={typeIcons[type as keyof typeof typeIcons]}
                    />
                  </div>
                  <h2 class="text-2xl font-bold text-gray-900">
                    {typeLabels[type as keyof typeof typeLabels]}
                  </h2>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                  {documents.map((doc) => (
                    <div
                      key={doc._id}
                      class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow"
                    >
                      <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                          <h3 class="text-lg font-semibold text-gray-900 mb-2">
                            {doc.title}
                          </h3>
                          {doc.description && (
                            <p class="text-gray-600 text-sm mb-3">{doc.description}</p>
                          )}
                        </div>
                        {doc.validUntil && (
                          <div
                            class={`ml-4 px-2 py-1 rounded-full text-xs font-medium ${
                              isExpired(doc.validUntil)
                                ? "bg-red-100 text-red-800"
                                : "bg-green-100 text-green-800"
                            }`}
                          >
                            {isExpired(doc.validUntil) ? "Expiré" : "Valide"}
                          </div>
                        )}
                      </div>

                      {doc.validUntil && (
                        <p class="text-sm text-gray-500 mb-4">
                          Valide jusqu'au {formatDate(doc.validUntil)}
                        </p>
                      )}

                      <a
                        href={doc.file.asset.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium"
                      >
                        <svg
                          class="w-4 h-4 mr-2"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                          />
                        </svg>
                        Télécharger le PDF
                      </a>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="bg-gray-50 rounded-xl p-12 max-w-md mx-auto">
              <svg
                class="w-16 h-16 text-gray-400 mx-auto mb-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                />
              </svg>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">
                Aucun document disponible
              </h3>
              <p class="text-gray-600">
                Les documents légaux seront bientôt disponibles.
              </p>
            </div>
          </div>
        )
      }
    </div>
  </section>

  <!-- Informations complémentaires -->
  <section class="section-padding bg-gray-50">
    <div class="container-max">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">
          Informations importantes
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white rounded-xl p-6">
            <div
              class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4"
            >
              <svg
                class="w-6 h-6 text-blue-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">
              Assurance professionnelle
            </h3>
            <p class="text-gray-600">
              Je suis couverte par une assurance responsabilité civile professionnelle
              pour l'exercice de l'hypnothérapie, garantissant votre sécurité et la
              mienne.
            </p>
          </div>

          <div class="bg-white rounded-xl p-6">
            <div
              class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4"
            >
              <svg
                class="w-6 h-6 text-green-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Formation continue</h3>
            <p class="text-gray-600">
              Je maintiens mes compétences à jour par une formation continue et le respect
              des standards professionnels de l'hypnothérapie.
            </p>
          </div>
        </div>

        <div class="mt-8 p-6 bg-blue-50 rounded-xl">
          <div class="flex items-start">
            <svg
              class="w-6 h-6 text-blue-600 mr-3 mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h4 class="font-semibold text-blue-900 mb-2">Note importante</h4>
              <p class="text-blue-800 text-sm">
                Tous les documents présentés ici sont authentiques et à jour. Si vous avez
                des questions concernant mes qualifications ou mon assurance, n'hésitez
                pas à me contacter directement.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
