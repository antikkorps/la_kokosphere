---
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupérer tous les témoignages créés via Decap CMS
const testimonials = await getCollection('testimonials');
---

<BaseLayout title={`Témoignages - ${SITE_TITLE}`} description="Découvrez les témoignages de nos patients qui ont retrouvé leur bien-être grâce à l'hypnothérapie. Histoires de transformation et de guérison.">
	
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
		<div class="container-max">
			<div class="text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Témoignages de nos patients
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Découvrez les histoires de transformation de personnes qui ont retrouvé leur bien-être grâce à l'hypnothérapie.
				</p>
			</div>
		</div>
	</section>

	<!-- Témoignages Section -->
	<section class="section-padding bg-white">
		<div class="container-max">
			{testimonials.length > 0 ? (
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{testimonials.map((testimonial) => (
						<div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 hover:shadow-xl transition-shadow duration-300">
							<div class="flex items-center mb-4">
								<div class="flex text-yellow-400">
									{Array.from({ length: testimonial.data.rating }, () => (
										<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
											<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
										</svg>
									))}
								</div>
							</div>
							<blockquote class="text-gray-600 mb-6 italic">
								"{testimonial.data.testimonial}"
							</blockquote>
							<div class="flex items-center justify-between">
								<div class="font-medium text-gray-900">{testimonial.data.clientName}</div>
								<div class="text-sm text-gray-500">
									{new Date(testimonial.data.date).toLocaleDateString('fr-FR', {
										year: 'numeric',
										month: 'long'
									})}
								</div>
							</div>
						</div>
					))}
				</div>
			) : (
				<div class="text-center py-12">
					<div class="bg-gray-50 rounded-xl p-8 max-w-md mx-auto">
						<svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
						</svg>
						<h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun témoignage pour le moment</h3>
						<p class="text-gray-600">
							Les témoignages de nos patients apparaîtront ici. Revenez bientôt !
						</p>
					</div>
				</div>
			)}
		</div>
	</section>

	<!-- CTA Section -->
	<section class="section-padding bg-primary-600">
		<div class="container-max text-center">
			<h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
				Prêt(e) à commencer votre transformation ?
			</h2>
			<p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
				Rejoignez nos patients satisfaits et découvrez comment l'hypnothérapie peut vous aider à surmonter vos difficultés.
			</p>
			<a href="/rendez-vous" class="bg-white text-primary-600 hover:bg-gray-100 font-medium py-4 px-8 rounded-lg transition-colors duration-200 inline-flex items-center justify-center text-lg">
				Prendre rendez-vous
			</a>
		</div>
	</section>

</BaseLayout> 