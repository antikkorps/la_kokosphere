---
import AnimatedSection from "../components/AnimatedSection.astro"
import ExpertiseDomainCard from "../components/ExpertiseDomainCard.astro"
import TestimonialCard from "../components/TestimonialCard.astro"
import TestimonialModal from "../components/TestimonialModal.vue"
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts"
import BaseLayout from "../layouts/BaseLayout.astro"
import { getExpertiseDomains, getTestimonials } from "../lib/sanity"

// Récupérer les témoignages depuis Sanity
const testimonials = await getTestimonials()

// Récupérer les domaines d'expertise depuis Sanity
const expertiseDomains = await getExpertiseDomains()
// Trier par ordre
const sortedDomains = expertiseDomains.sort((a, b) => a.order - b.order)
---

<BaseLayout 
  title={`${SITE_TITLE} - Hypnothérapeute Le Mans | Stress, Anxiété, Phobies`}
  description={SITE_DESCRIPTION}
  keywords="hypnothérapeute Le Mans, hypnose ericksonienne, stress anxiété, phobies addictions, sommeil insomnie, confiance en soi, hypnose entreprise, séances domicile, thérapie bien-être, développement personnel Le Mans"
  type="website"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
    <AnimatedSection trigger="load" delay={0.2}>
      <div class="container-max">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <AnimatedSection trigger="load" delay={0.4} direction="left">
            <div>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
                Retrouvez votre <span class="text-primary-600">bien-être</span> grâce à l'hypnothérapie
              </h1>
              <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                Spécialisée dans le traitement du stress, de l'anxiété, des phobies et des
                addictions. Une approche bienveillante et personnalisée pour vous
                accompagner vers un mieux-être durable.
              </p>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/rendez-vous" class="btn-primary text-lg px-8 py-4">
                  Prendre rendez-vous
                </a>
                <a href="/services" class="btn-outline text-lg px-8 py-4">
                  Découvrir mes services
                </a>
              </div>
            </div>
          </AnimatedSection>
          <AnimatedSection trigger="load" delay={0.6} direction="right">
            <div class="relative">
              <div class="bg-white rounded-2xl shadow-xl p-8">
                <div class="aspect-square rounded-xl overflow-hidden">
                  <img
                    src="/images/illustrationsSite/bien-etre.webp"
                    alt="Illustration du bien-être et de l'hypnothérapie"
                    class="w-full h-full object-cover"
                    loading="eager"
                  />
                </div>
              </div>
            </div>
          </AnimatedSection>
        </div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Services Section -->
  <section class="section-padding bg-white">
    <AnimatedSection trigger="scroll" delay={0.2}>
      <div class="container-max">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Mes domaines d'expertise
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Je vous accompagne dans la résolution de diverses problématiques grâce à des
            techniques d'hypnothérapie éprouvées et personnalisées.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            sortedDomains.map((domain, index) => (
              <ExpertiseDomainCard domain={domain} delay={index * 0.1} />
            ))
          }
        </div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Hypnose à domicile Section -->
  <section class="section-padding bg-gradient-to-br from-primary-50 to-secondary-50">
    <AnimatedSection trigger="scroll" delay={0.2}>
      <div class="container-max">
        <div class="max-w-4xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
              Hypnose à domicile – 
              <span class="text-primary-600">Bien-être et sérénité</span> chez vous
            </h2>
            <p class="text-xl text-gray-600 leading-relaxed">
              Profitez des bienfaits de l'hypnose sans bouger de chez vous. Séances personnalisées d'hypnose à domicile pour gérer stress, anxiété, addictions, confiance en soi et retrouver équilibre.
            </p>
          </div>

          <div class="bg-white rounded-2xl shadow-lg p-8 lg:p-12 mb-12">
            <div class="flex items-start gap-6 mb-8">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 bg-gradient-to-r from-primary-500 to-secondary-500 rounded-2xl flex items-center justify-center">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-2xl font-bold text-gray-900 mb-4">
                  Hypnose à domicile : une solution pratique et efficace
                </h3>
                <p class="text-gray-600 text-lg leading-relaxed">
                  Vous souhaitez bénéficier d'une séance d'hypnose, mais vous préférez rester dans le confort de votre maison ?
                  L'hypnose à domicile vous permet de profiter d'un accompagnement personnalisé, sans déplacement, dans un environnement familier et rassurant.
                </p>
              </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
              <!-- Avantages -->
              <div>
                <h4 class="text-xl font-bold text-gray-900 mb-6">
                  Pourquoi choisir l'hypnose à domicile ?
                </h4>
                <div class="space-y-4">
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                      <svg class="w-3 h-3 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div>
                      <span class="font-semibold text-gray-900">Confort et praticité :</span>
                      <span class="text-gray-600"> vous évitez les trajets et gagnez du temps</span>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                      <svg class="w-3 h-3 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div>
                      <span class="font-semibold text-gray-900">Bien-être renforcé :</span>
                      <span class="text-gray-600"> dans votre espace habituel, vous êtes plus détendu et réceptif</span>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                      <svg class="w-3 h-3 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div>
                      <span class="font-semibold text-gray-900">Accompagnement personnalisé :</span>
                      <span class="text-gray-600"> la séance est adaptée à vos besoins et à votre rythme</span>
                    </div>
                  </div>
                  <div class="flex items-start gap-3">
                    <div class="w-6 h-6 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                      <svg class="w-3 h-3 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div>
                      <span class="font-semibold text-gray-900">Confidentialité garantie :</span>
                      <span class="text-gray-600"> vous êtes dans votre cocon, sans contrainte extérieure</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Besoins -->
              <div>
                <h4 class="text-xl font-bold text-gray-900 mb-6">
                  Pour quels besoins ?
                </h4>
                <p class="text-gray-600 mb-4">
                  L'hypnose à domicile peut vous aider dans de nombreuses situations :
                </p>
                <div class="space-y-3">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Gestion du stress et de l'anxiété</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Confiance en soi et estime personnelle</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Addictions (tabac, alcool, sucre, comportements compulsifs)</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Phobies et peurs irrationnelles</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Amélioration du sommeil et relaxation profonde</span>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-secondary-500 rounded-full"></div>
                    <span class="text-gray-700">Préparation aux examens ou événements importants</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="text-center">
            <a href="/rendez-vous" class="btn-primary text-lg px-8 py-4 inline-flex items-center gap-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9a2 2 0 012-2h3z" />
              </svg>
              Réserver ma séance à domicile
            </a>
          </div>
        </div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Témoignages Section -->
  <section class="section-padding bg-gray-50">
    <AnimatedSection trigger="scroll" delay={0.2}>
      <div class="container-max">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Ce que disent mes patients
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
            Découvrez les témoignages de personnes qui ont retrouvé leur bien-être grâce à
            l'hypnothérapie.
          </p>
          <div class="inline-flex items-center gap-2 bg-primary-50 text-primary-700 px-4 py-2 rounded-full text-sm font-medium border border-primary-200 hover:bg-primary-100 transition-colors duration-200">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <a href="/faq" class="hover:underline">Des questions sur l'hypnothérapie ?</a>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            testimonials.length > 0 ? (
              testimonials.slice(0, 3).map((testimonial, index) => (
                <AnimatedSection trigger="scroll" delay={index * 0.1}>
                  <TestimonialCard testimonial={testimonial} />
                </AnimatedSection>
              ))
            ) : (
              <div class="col-span-full text-center py-12">
                <div class="bg-gray-50 rounded-xl p-8 max-w-md mx-auto">
                  <svg
                    class="w-16 h-16 text-gray-400 mx-auto mb-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                    />
                  </svg>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">
                    Aucun témoignage pour le moment
                  </h3>
                  <p class="text-gray-600">
                    Les témoignages de nos patients apparaîtront ici.
                  </p>
                </div>
              </div>
            )
          }
        </div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Call to Action Section -->
  <section class="section-padding bg-gradient-to-br from-gray-900 to-gray-800 relative overflow-hidden">
    <AnimatedSection trigger="scroll" delay={0.2}>
      <div class="container-max relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <AnimatedSection trigger="scroll" delay={0.4} direction="left">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
                Prêt(e) à transformer votre vie ?
              </h2>
              <p class="text-xl text-gray-300 mb-8 leading-relaxed">
                Ne laissez plus le stress, l'anxiété ou les blocages gouverner votre quotidien. 
                Prenez rendez-vous dès aujourd'hui et découvrez la puissance de l'hypnothérapie.
              </p>
              <div class="flex flex-col sm:flex-row gap-4">
                <a href="/rendez-vous" class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-4 px-8 rounded-lg transition-colors duration-200 inline-flex items-center text-lg leading-tight">
                  Prendre rendez-vous
                </a>
                <a href="/services" class="bg-white/10 hover:bg-white/20 text-white border border-white/20 font-medium py-4 px-8 rounded-lg transition-colors duration-200 inline-flex items-center justify-center text-lg backdrop-blur-sm">
                  Découvrir mes services
                </a>
              </div>
            </div>
          </AnimatedSection>
          
          <AnimatedSection trigger="scroll" delay={0.6} direction="right">
            <div class="relative">
              <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10">
                <div class="aspect-video rounded-xl overflow-hidden shadow-2xl">
                  <img
                    src="/images/illustrationsSite/Passez-a-l-action.webp"
                    alt="Passez à l'action - Commencez votre transformation"
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              </div>
              
              <!-- Élément décoratif -->
              <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary-500/20 rounded-full blur-2xl"></div>
              <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-secondary-500/20 rounded-full blur-2xl"></div>
            </div>
          </AnimatedSection>
        </div>
      </div>
      
      <!-- Élements décoratifs de fond -->
      <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary-500/5 rounded-full blur-3xl"></div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Island Vue pour la modal -->
  <TestimonialModal
    client:only="vue"
    testimonials={testimonials.map((t) => ({
      id: t._id,
      clientName: t.clientName,
      testimonial: t.testimonial,
      rating: t.rating,
      date: t.date,
    }))}
  />
</BaseLayout>
