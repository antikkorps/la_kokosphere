---
import { getCollection } from 'astro:content';
import AnimatedSection from '../components/AnimatedSection.astro';
import ExpertiseDomainCard from '../components/ExpertiseDomainCard.astro';
import { CALENDLY_URL, SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupérer les témoignages créés via Decap CMS
const testimonials = await getCollection('testimonials');

// Récupérer les domaines d'expertise
const expertiseDomains = await getCollection('expertiseDomains');
// Trier par ordre
const sortedDomains = expertiseDomains.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
		
		<!-- Hero Section -->
		<section class="bg-gradient-to-br from-primary-50 to-secondary-50 section-padding">
			<AnimatedSection trigger="load" delay={0.2}>
				<div class="container-max">
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
						<AnimatedSection trigger="load" delay={0.4} direction="left">
							<div>
								<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
									Retrouvez votre <span class="text-primary-600">bien-être</span> grâce à l'hypnothérapie
								</h1>
								<p class="text-xl text-gray-600 mb-8 leading-relaxed">
									Spécialisée dans le traitement du stress, de l'anxiété, des phobies et des addictions. 
									Une approche bienveillante et personnalisée pour vous accompagner vers un mieux-être durable.
								</p>
								<div class="flex flex-col sm:flex-row gap-4">
									<a href={CALENDLY_URL} class="btn-primary text-lg px-8 py-4">
										Prendre rendez-vous
									</a>
									<a href="/services" class="btn-outline text-lg px-8 py-4">
										Découvrir mes services
									</a>
								</div>
							</div>
						</AnimatedSection>
						<AnimatedSection trigger="load" delay={0.6} direction="right">
							<div class="relative">
								<div class="bg-white rounded-2xl shadow-xl p-8">
									<div class="aspect-square rounded-xl overflow-hidden">
										<img 
											src="/images/illustrationsSite/bien-etre.webp" 
											alt="Illustration du bien-être et de l'hypnothérapie" 
											class="w-full h-full object-cover"
											loading="eager"
										/>
									</div>
								</div>
							</div>
						</AnimatedSection>
					</div>
				</div>
			</AnimatedSection>
		</section>

		<!-- Services Section -->
		<section class="section-padding bg-white">
			<AnimatedSection trigger="scroll" delay={0.2}>
				<div class="container-max">
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
							Mes domaines d'expertise
						</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Je vous accompagne dans la résolution de diverses problématiques grâce à des techniques d'hypnothérapie éprouvées et personnalisées.
						</p>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{sortedDomains.map((domain, index) => (
							<ExpertiseDomainCard domain={domain} delay={index * 0.1} />
						))}
					</div>
				</div>
			</AnimatedSection>
		</section>

		<!-- Témoignages Section -->
		<section class="section-padding bg-gray-50">
			<AnimatedSection trigger="scroll" delay={0.2}>
				<div class="container-max">
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
							Ce que disent mes patients
						</h2>
						<p class="text-xl text-gray-600 max-w-3xl mx-auto">
							Découvrez les témoignages de personnes qui ont retrouvé leur bien-être grâce à l'hypnothérapie.
						</p>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{testimonials.length > 0 ? (
							testimonials.slice(0, 3).map((testimonial, index) => (
								<AnimatedSection trigger="scroll" delay={index * 0.1} class="bg-white rounded-xl p-8 shadow-sm">
									<div class="flex items-center mb-4">
										<div class="flex text-yellow-400">
											{Array.from({ length: testimonial.data.rating }, () => (
												<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
													<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
												</svg>
											))}
										</div>
									</div>
									<p class="text-gray-600 mb-4">
										"{testimonial.data.testimonial}"
									</p>
									<div class="font-medium text-gray-900">{testimonial.data.clientName}</div>
								</AnimatedSection>
							))
						) : (
							<div class="col-span-full text-center py-12">
								<div class="bg-gray-50 rounded-xl p-8 max-w-md mx-auto">
									<svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
									</svg>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">Aucun témoignage pour le moment</h3>
									<p class="text-gray-600">
										Les témoignages de nos patients apparaîtront ici.
									</p>
								</div>
							</div>
						)}
					</div>
				</div>
			</AnimatedSection>
		</section>

</BaseLayout>
