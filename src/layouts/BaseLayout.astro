---
import BaseHead from '../components/BaseHead.astro';
import ColorTheme from '../components/ColorTheme.astro';
import CookieConsent from '../components/CookieConsent.vue';
import Footer from '../components/Footer.astro';
import ModernHeader from '../components/ModernHeader.astro';
import QuickNav from '../components/QuickNav.astro';
import ScrollToTop from '../components/ScrollToTop.astro';


interface Props {
	title: string;
	description: string;
	image?: any;
	keywords?: string;
	author?: string;
	type?: 'website' | 'article' | 'medicalBusiness' | 'service';
	locale?: string;
}

const { title, description, image, keywords, author, type, locale } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			image={image}
			keywords={keywords}
			author={author}
			type={type}
			locale={locale}
		/>
		<ColorTheme />
	</head>
	<body>
		<ModernHeader />
		
		<main class="pb-20 md:pb-0">
			<slot />
		</main>
		
		<Footer />

		<!-- QuickNav flottant en bas à gauche -->
		<QuickNav />

		<!-- ScrollToTop flottant en bas à droite -->
		<ScrollToTop />

		<!-- Composant de gestion des cookies -->
		<CookieConsent client:load />

	</body>
</html> 